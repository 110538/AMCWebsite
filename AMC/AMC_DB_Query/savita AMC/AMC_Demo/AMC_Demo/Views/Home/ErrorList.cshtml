@using System.Data
@model DataSet
@{
    ViewData["Title"] = "ErrorList";

}
@ViewBag.ErrorMessage


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="md-3">Search Error List</h4>
        </div>
    </div>

    <form action="Home/ErrorList" method="post" class="needs-validation">
        <div class="row">
            <div class="col-md-5">
                <input id="Bid" name="Bid" type="text" value="" class="form-control" required="required" />
            </div>
            <div class="col-md-5">
                <input id="Biddate" name="Biddate" type="datetime-local" class="form-control" required="required" />
            </div>
            <div class="col-md-2">
                <input type="submit" value="search" class="btn btn-primary btn-block" />
            </div>
        </div>



    </form>
    <br /><br />

    <div class="row">
        <div class="col-md-12">
            <h4 class="md-3">Search History</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="tbldataSearchHistory" border="1" style="border-color:#ddd; border-collapse:collapse;" class="table table-striped display" cellpadding="0" cellspacing="0" table-layout="fixed">
                <thead>
                    <tr>
                        <th>Bid</th>
                        <th>Recorded On</th>
                        <th class="text-center">Search Again</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Tables[0].Rows)

                    {
                        <tr>
                            <td>@row[0]</td>
                            <td>@row[1]</td>

                            <td align="center" class="text-center">
                                <form action="Home/ErrorList" method="post">
                                    <input id="Bid" name="Bid" type="hidden" value="@row[0]" />
                                    <input id="Biddate" name="Biddate" type="hidden" value="@row[1]" />
                                    <input type="submit" value="search" class="btn-search" />
                                </form>

                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
            </div>
        </div>

        </div>


